<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.CommandInitiaterControllsDemo"
             Title="CommandInitiaterControllsDemo">
    <VerticalStackLayout Spacing="20">
        <Button 
            x:Name ="BtnTest"
            Text="Show Alert Box"
            Clicked="BtnTest_Clicked"
            />
        <ImageButton 
            Source="dotnet_bot.png"
            Clicked="BtnTest_Clicked"
            />
        <RadioButton 
            CheckedChanged="RadioButton_CheckedChanged"
            Content="Option 1"
            GroupName="Group 1"
            />
            <RadioButton 
            CheckedChanged="RadioButton_CheckedChanged"
            Content="Option 2"
            GroupName="Group 1"
            />
            <RadioButton 
            CheckedChanged="RadioButton_CheckedChanged"
            Content="Option 3"
            GroupName="Group 1"
            />
            <RadioButton 
            CheckedChanged="RadioButton_CheckedChanged"
            Content="Option 4"
            GroupName="Group 1"
            />
            <SearchBar 
                x:Name="searchControl"
                SearchButtonPressed="searchControl_SearchButtonPressed" 
                TextColor="black"
                BackgroundColor="Beige"
                />
            <SwipeView>
                <SwipeView.LeftItems>
                    <SwipeItems>
                        <SwipeItem 
                            BackgroundColor="lightgreen"
                            IconImageSource="dotnet_bot.png"
                            Invoked="SwipeItem_Invoked"
                            Text="Favourite"
                            />
                        <SwipeItem 
                            BackgroundColor="pink"
                            IconImageSource="dotnet_bot.png"
                            Invoked="SwipeItem_Invoked"
                            Text="Delete"
                            />
                    </SwipeItems>
                </SwipeView.LeftItems>
                <Grid BackgroundColor="Beige" HeightRequest="60" WidthRequest="300">
                    <Label 
                        HorizontalOptions="Center"
                        Text="SwipeRight"
                        VerticalOptions="Center"
                        />
                    
                </Grid>
            </SwipeView>
            <Button Text="ValueController" Clicked="ValueController_Clicked"/>
    </VerticalStackLayout>
</ContentPage>