<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlsDemo.PresentationControlsDemo"
             Title="PresentationControlsDemo">
    <ScrollView>
        
    <VerticalStackLayout Spacing="10">
        <BoxView 
            HeightRequest="200"
            BackgroundColor="AliceBlue"
            />
        <Label 
            Text="Welcome to .NET MAUI!"
            TextColor="DarkBlue"
            FontSize="Large"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center" />
        <Ellipse Fill="Beige"
                Stroke="DarkBlue"
                StrokeThickness="10"
                HeightRequest="100"
                WidthRequest="100"
                HorizontalOptions="Center"
             />
        <Line 
            Stroke="Blue"
            StrokeThickness="10"
            X1="0"
            Y1="0"
            X2="100"
            Y2="50"
            HorizontalOptions="Center"
            />
        <Rectangle Fill="Bisque" 
            Stroke="AliceBlue"
            StrokeThickness="10"
            RadiusX="50"
            RadiusY="50"
            HorizontalOptions="Center"
            HeightRequest="100"
            WidthRequest="100"
            />
        <Frame BackgroundColor="AliceBlue"
            Padding="50">
            <Image Source="dotnet_bot.png" Aspect="Center" />
</Frame>

    <Button Text="CommandController" Clicked="CMDController_Clicked"/>

        
    </VerticalStackLayout>

    </ScrollView>

</ContentPage>