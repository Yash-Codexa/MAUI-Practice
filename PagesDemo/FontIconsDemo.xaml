<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.FontIconsDemo"
             Title="FontIconsDemo">
    <StackLayout BackgroundColor="Black" Spacing="25" >
        <Image Margin="0,30,0,0"> 
            <Image.Source>
                <FontImageSource  
                    FontFamily="Icons"    
                    Glyph="&#xE800;"
                    Size="50"
                />
            </Image.Source> 
        </Image>
        <Button Text="FilesDemo" HeightRequest="20" Clicked="FilesDemo_Clicked"/>
    </StackLayout>
</ContentPage>