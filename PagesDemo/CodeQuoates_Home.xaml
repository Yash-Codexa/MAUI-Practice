<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.CodeQuoates_Home"
             Title="CodeQuoates_Home">
    <Grid x:Name="background">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStopCollection>
                    <GradientStop Offset="0.0" Color="#051937" />
                    <GradientStop Offset="0.25" Color="#004d7a" />
                    <GradientStop Offset="0.50" Color="#008793" />
                    <GradientStop Offset="0.75" Color="#00bf72" />
                    <GradientStop Offset="1" Color="#a8eb12" />
                </GradientStopCollection>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="25" RowDefinitions=".7*,.2*,.1*">
            <Label 
                FontFamily="MainFont"
                FontSize="50"
                HorizontalTextAlignment="Center"
                Text="They Don't Make Bugs Like Bunny anymore.- Olav Mjelde"
                TextColor="White"
                VerticalOptions="Center"    
                x:Name="quote"
            />
            <Button x:Name="btnGenerateQuote"
                Grid.Row="1"
                BackgroundColor="Black"
                Opacity=".4"
                Text="Get New Quote"    
                Clicked="btnGenerateQuote_Clicked"
            />
            <Button Grid.Row="2" Text="Binding Demo" Clicked="BindingDemo_Clicked"/>

        </Grid>
    </Grid>
</ContentPage>