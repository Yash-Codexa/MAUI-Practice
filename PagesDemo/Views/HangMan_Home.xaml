<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.HangMan_Home"
             Title="HangMan_Home">
    
    <Grid RowDefinitions=".5*,.4*,.1*">
        <VerticalStackLayout>
        <Label 
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Text="{Binding GameStatus}"    
        />
        <Image HeightRequest="200" Source="{Binding CurrentImage}"/>
        <Label 
            FontSize="40"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Text="{Binding Spotlight}"    
        />
        <Label FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="{Binding Message}"    
        />
        <Button 
            HorizontalOptions="Center"
            WidthRequest="100"
            Text="Reset"    
            Clicked="Reset_Clicked"
        />
        </VerticalStackLayout>
        <FlexLayout 
            x:Name="LettersContainer"
            Grid.Row="1" 
            Wrap="Wrap" 
            JustifyContent="SpaceEvenly"
            BindableLayout.ItemsSource="{Binding Letters}"
        >
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button HeightRequest="50"
                WidthRequest="50"
                Text="{Binding .}"
                Clicked="Button_Clicked"
                />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
            


        </FlexLayout>
        <Button Grid.Row="2" HeightRequest="20" Text="PersonViewModel" Clicked="Button_Clicked1" />
    </Grid>

</ContentPage>