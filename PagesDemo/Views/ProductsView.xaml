<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.ProductsView"
             Title="ProductsView">

    <Grid RowDefinitions=".1*,.9*" >

        <Button Text="Manual Scrolling" Clicked="Button_Clicked" />

    <CollectionView 
        x:Name="collectionView"
        IsGrouped="True" 
        ItemsSource="{Binding Products}"
        Scrolled="CollectionView_Scrolled"
        Grid.Row="1"
        ItemsUpdatingScrollMode="KeepLastItemInView"
        >
        <CollectionView.ItemsLayout>
            <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" SnapPointsType="Mandatory" SnapPointsAlignment="Start"/>
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="White" CornerRadius="15">
                    <VerticalStackLayout>
                        <Label Text="{Binding Id}"/>
                        <Label Text="{Binding Name}"/>
                        <Label Text="{Binding Price}"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label 
                    BackgroundColor="LightGray"
                    FontAttributes="Bold"
                    FontSize="Large"
                    Text="{Binding Name}"
                    TextColor="Black"
                    HorizontalTextAlignment="Center"
                    />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>

        <CollectionView.GroupFooterTemplate>
            <DataTemplate>
                <Label
                    Margin="0,0,0,10"
                    Text="{Binding Count, StringFormat='TotalProducts: {0:D}'}" 
                    TextColor="MidnightBlue"
                    />
            </DataTemplate>
        </CollectionView.GroupFooterTemplate>

    </CollectionView>

    </Grid>
</ContentPage>