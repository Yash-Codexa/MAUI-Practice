<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.LayoutPage_CollectionViewDemo"
             Title="LayoutPage_CollectionViewDemo">

    <Grid RowDefinitions=".1*,.9*">
        <Button Text="Clear Selection"
            Command="{Binding ClearCommand}" />
            
             <!-- Single Selection Mode -->
    <!-- <CollectionView ItemsSource="{Binding Products}" 
            SelectionMode="Single"
            SelectedItem="{Binding SelectedProduct}"
            SelectionChangedCommand="{Binding ProductChangeCommand}"
            Grid.Row="1"
        > -->

        <!-- Multiple Collection Mode -->
    <CollectionView ItemsSource="{Binding Products}"
            SelectionMode="Multiple"
            SelectedItems="{Binding SelectedProducts}"
            SelectionChangedCommand="{Binding ProductsChangedCommand}"
            Grid.Row="1"
        >

        <CollectionView.Header>
            <Frame BackgroundColor="{StaticResource Primary}">
                <Label FontAttributes="Bold" 
                    Text="Products"
                    FontSize="Title"
                    HorizontalOptions="Center"
                    TextColor="White" />
            </Frame>
        </CollectionView.Header>

        <CollectionView.Footer>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label FontSize="Title" >
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Powered By:"
                                TextColor="{StaticResource Tertiary}" />
                            <Span Text=".Net MAUI"
                                TextColor="{StaticResource Primary}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </HorizontalStackLayout>
        </CollectionView.Footer>

        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" />
            <!-- <GridItemsLayout Orientation="Horizontal" Span="3" /> -->
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>

                <!-- For Linear List & Horizontal Grid List -->
                <Frame Margin="15" 
                    WidthRequest="200" HeightRequest="250"
                     > 

                     <!-- For Grid List -->
                     <!-- <Frame Margin="15" > -->

                    <VerticalStackLayout>
                        <Image Source="{Binding Images}" />
                        <Label HorizontalTextAlignment="Center"
                            Text="{Binding Name}" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </Grid>
</ContentPage>