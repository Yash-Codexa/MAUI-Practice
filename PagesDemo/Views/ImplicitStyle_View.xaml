<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.ImplicitStyle_View"
             Title="ImplicitStyle_View">

    <ContentPage.Resources>
        <Color x:Key="bgColor">#323031</Color>
                    <Color x:Key="txtColor">#ffc857</Color>

                    <Style TargetType="StackBase" ApplyToDerivedTypes="True">
                    <Setter Property="VerticalOptions" Value="Center" />
                    <Setter Property="HorizontalOptions" Value="Center" />
                    <Setter Property="Padding" Value="30,0" />
                    <Setter Property="Spacing" Value="25" />
                    </Style>
            <Style TargetType="Button" x:Key="btnBase">
                    <Setter Property="TextColor" Value="{StaticResource txtColor}" />
                    <Setter Property="FontSize" Value="Large" />
                    <Setter Property="FontAttributes" Value="Bold" />
                    <Setter Property="CornerRadius" Value="10" />
            
            </Style>

        <Style 
            x:Key="btnBG"
            TargetType="Button" BasedOn="{StaticResource btnBase}">
            <Setter Property="BackgroundColor" Value="{StaticResource bgColor}"/>
        </Style>

        <Style 
            x:Key="btnPurple"
            TargetType="Button" BasedOn="{StaticResource btnBase}">
            <Setter Property="BackgroundColor" Value="Purple"/>
        </Style>

