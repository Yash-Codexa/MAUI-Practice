            </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary> -->

        
            
        
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
            
            <!-- Below Button is Using Explicit Style -->
        <Button 
            Text="LOGIN" 
            Style="{StaticResource btnBG}" 
            
            />
        
        <Button 
            Text="LOG OUT" 
            Style="{StaticResource btnPurple}"

            />
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>