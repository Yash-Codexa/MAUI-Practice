<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.DynamicStyle_View"
             Title="DynamicStyle_View">

    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="greenStyle">
            <Setter Property="BackgroundColor" Value="DarkGreen" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout VerticalOptions="Center" 
            HorizontalOptions="Center" Spacing="30">
        <Button Text="Click Me!" Style="{DynamicResource DynamicStyle}"/>
        <Button Text="Click Me!" />
        <Button Text="Change the Style" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>