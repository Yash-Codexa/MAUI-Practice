<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.Navigation_Page1"
             Title="Navigation_Page1">

    <NavigationPage.TitleView>
        <Frame 
            Margin="10"
            Padding="0"
            CornerRadius="0"
            >
        <SearchBar Placeholder="Search Places"  />
        </Frame>
    </NavigationPage.TitleView>

    <VerticalStackLayout VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Spacing="20"
            >
        <Entry Text="{Binding Name}" />
        <Button Text="Go to Page 2" Clicked="Button_Clicked"/>
        <Button Text="Go to Page 3" Clicked="Button_Clicked_1"/>
        <Button Text="Go to Modal Page" Clicked="Button_Clicked1"/>
    </VerticalStackLayout>
</ContentPage>