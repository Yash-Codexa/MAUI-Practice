<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagesDemo.Views.ConvertorsView"
             xmlns:convertors="clr-namespace:PagesDemo.Convertors"
             Title="ConvertorsView">

    <ContentPage.Resources>
        <convertors:BoolConvertors x:Key="boolConvertor" />
    </ContentPage.Resources>

    <HorizontalStackLayout VerticalOptions="Center" 
            HorizontalOptions="Center" >
        <CheckBox IsChecked="{Binding Data.Married, Converter={StaticResource boolConvertor}}"/>
        <Label 
            Text="Married?"
            />
    </HorizontalStackLayout>
</ContentPage>